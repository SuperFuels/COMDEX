{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": ["vscode", "node"],
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}