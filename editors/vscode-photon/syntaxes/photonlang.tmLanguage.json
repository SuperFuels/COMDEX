{
  "scopeName": "source.photon",
  "name": "Photon",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punct" },
    { "include": "#brackets" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.line.number-sign.photon", "match": "#.*$" }
      ]
    },
    "strings": {
      "patterns": [
        { "name": "string.quoted.double.photon", "begin": "\"", "end": "\"", "patterns": [{ "name": "constant.character.escape.photon", "match": "\\\\." }] },
        { "name": "string.quoted.single.photon", "begin": "'", "end": "'", "patterns": [{ "name": "constant.character.escape.photon", "match": "\\\\." }] }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.photon", "match": "\\b\\d+(?:_\\d+)*(?:\\.\\d+(?:_\\d+)*)?(?:[eE][+-]?\\d+)?\\b" }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.symbol.photon",
          "match": "[⊕μ↔⟲π∧∨¬≔≟⟶≠≡∈≤≥＋−∕＾]"
        }
      ]
    },
    "punct": {
      "patterns": [
        { "name": "punctuation.separator.photon", "match": "[∶·‚⁏]" }
      ]
    },
    "brackets": {
      "patterns": [
        { "name": "punctuation.bracket.photon", "match": "[⟮⟯⟦⟧⦃⦄()\\[\\]{}]" }
      ]
    }
  }
}