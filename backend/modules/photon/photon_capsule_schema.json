{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Photon Capsule",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "glyphs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "logic": { "type": "string" },
          "operator": { "type": "string" },
          "args": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["operator"]
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "symbol": { "type": "string" },
          "value": { "type": "string" },
          "args": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["symbol", "value"]
      }
    }
  },
  "anyOf": [
    { "required": ["glyphs"] },
    { "required": ["steps"] }
  ]
}