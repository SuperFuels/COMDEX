{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aion.dev/photon_capsule_schema.json",
  "title": "Photon Capsule",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "_physics_snapshot": { "type": "object" },
    "id": { "type": "string" },
    "logic_tree": { "type": "object" },
    "origin_trace": { "type": "string" },
    "soullaw_status": { "type": "string" },
    "soullaw_violations": {
      "type": "array",
      "items": { "type": "string" }
    },
    "sqi_score": { "type": "number" },
    "status": { "type": "string" },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string" },

    "engine": { "type": "string" },
    "metadata": { "type": "object" },
    "context": { "type": "object" },

    "type": { "type": "string" },
    "timestamp": { "type": "number" },
    "hash": { "type": "string" },
    "checksum": { "type": "string" },
    "source": { "type": "string" },
    "meta": { "type": "object" },
    "semantics": { "type": "object" },

    "hdr": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ver": { "type": "integer" },
        "ts": { "type": "number" },
        "trace": { "type": "string" },
        "source": { "type": "string" },
        "session": { "type": "string" },
        "tag": { "type": "string" }
      }
    },

    "resonance": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "n": { "type": "number" },
        "rho_mean": { "type": ["number", "null"] },
        "I_mean": { "type": ["number", "null"] },
        "SQI_mean": { "type": ["number", "null"] }
      }
    },

    "glyphs": {
      "type": "array",
      "minItems": 0,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "logic": { "type": "string" },
              "operator": { "type": "string", "minLength": 1 },
              "symbol": { "type": "string", "minLength": 1 },
              "expr": { "type": "string" },
              "args": {
                "type": "array",
                "items": { "type": ["string", "number", "boolean"] }
              },
              "meta": { "type": "object" }
            },
            "anyOf": [
              { "required": ["operator"] },
              { "required": ["symbol"] },
              { "required": ["expr"] }
            ]
          },
          { "type": "string" }
        ]
      }
    },

    "glyph_stream": {
      "type": "array",
      "minItems": 0,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "logic": { "type": "string" },
              "operator": { "type": "string", "minLength": 1 },
              "symbol": { "type": "string", "minLength": 1 },
              "expr": { "type": "string" },
              "args": {
                "type": "array",
                "items": { "type": ["string", "number", "boolean"] }
              },
              "meta": { "type": "object" }
            },
            "anyOf": [
              { "required": ["operator"] },
              { "required": ["symbol"] },
              { "required": ["expr"] }
            ]
          },
          { "type": "string" }
        ]
      }
    },

    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "symbol": { "type": "string", "minLength": 1 },
          "value": { "type": "string" },
          "args": {
            "type": "array",
            "items": { "type": ["string", "number", "boolean"] }
          },
          "meta": { "type": "object" }
        },
        "required": ["symbol"]
      }
    }
  },

  "anyOf": [
    { "required": ["glyphs"] },
    { "required": ["steps"] },
    { "required": ["glyph_stream"] }
  ]
}