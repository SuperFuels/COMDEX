// File: frontend/tsconfig.json
{
  "compilerOptions": {
    // â”€â”€ 1) Target / Module / JSX settings â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",

    // â”€â”€ 2) Strictness / Interop / No Emission â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,

    // â”€â”€ 3) Type Definitions â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "types": ["node", "next", "react", "react-dom"],

    // â”€â”€ 4) Path Aliases â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "baseUrl": ".",  // ðŸ‘ˆ base is frontend/
    "paths": {
      "@/constants/*":         ["./constants/*"],
      "@/types":               ["./types/index.ts"],
      "@/types/*":             ["./types/*"],
      "@/lib/*":               ["./lib/*"],
      "@/components/*":        ["./components/*"],
      "@/components/ui/*":     ["./components/ui/*"],
      "@/hooks/*":             ["./hooks/*"],
      "@/utils/*":             ["./utils/*"],
      "@/styles/*":            ["./styles/*"],

      // ðŸ†• Cross-project aliases (relative to frontend/)
      "@modules/*":            ["../backend/modules/*"],
      "@types/qfc":            ["../types/qfc.ts"],
      "@types/*":              ["../types/*"]
    }
  },

  // â”€â”€ 5) Which files to include / exclude â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}