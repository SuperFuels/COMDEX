{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,

    /* ⬇️ Remove explicit types so next-env.d.ts can provide Next/React types */
    /* "types": ["react", "react-dom", "node"], */

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/constants/*": ["./constants/*"],
      "@/types": ["./types/index.ts"],
      "@/types/*": ["./types/*"],
      "@/lib/*": ["./lib/*"],
      "@/lib/colors/*": ["./lib/colors/*"],
      "@/components/*": ["./components/*"],
      "@/components/ui/*": ["./components/ui/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/utils/*": ["./utils/*"],
      "@/styles/*": ["./styles/*"],
      "@/collab/*": ["./collab/*"],
      "@modules/*": ["../backend/modules/*"],
      "@types/qfc": ["../types/qfc.ts"],
      "@types/*": ["../types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "y-websocket-utils.d.ts"
  ],
  "exclude": ["node_modules"]
}