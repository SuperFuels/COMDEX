{
  // Use the workspace TypeScript (the one under frontend/)
  "typescript.tsdk": "frontend/node_modules/typescript/lib",

  // (optional but nice) show a prompt to switch to workspace tsdk if not active
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // IDX AI helpers (keep only if you actually use IDX)
  "IDX.ai.enableInlineCompletion": true,
  "IDX.ai.enableCodebaseIndexing": true
}